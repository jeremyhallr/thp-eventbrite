<div class="mt-3 container text-center">
  <h1>Users index</h1>

  <div class="container text-justify">
    <ul>
      <% @users.each do |user| %>
        <% user_id = user.id %>
        <% unless user.email == "adminou@yopmail.com" %>
          <li>
            <%= user.email %>
            <%= link_to "Show User", user_path(id: user_id), :class => "btn btn-info btn-sm" %>
          </li>
          </br>
        <% end %>
      <% end %>
    </ul>
</div>