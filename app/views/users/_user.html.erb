<h1 class="h1 mt-5 font-weight-normal text-center">Hello <strong><%= @user.first_name %></strong> !</h1>

<div class="mb-3 container">

  <div class="mb-3 container text-center">
    <%= link_to "Edit email/password", edit_user_registration_path, :class => "btn btn-primary btn-sm text-center" %>
  </div>

  <div class="row">
    <div class="col-md-6 my-auto">
      <h3><b><%= @user.first_name %> <%= @user.last_name %></b></h3>
      <p class="text-muted">
        Contact : <%= @user.email %>
      </p>
      <h5><b>Description</b></h5>
      <p class="text-justify">
      <%= @user.description %>
      </p>
      <%= link_to "Edit info", edit_user_path, :class => "btn btn-primary btn-sm" %>
    </div>

    <div class="col-md-6">
      <%if @user.avatar.attached?%>
        <%= image_tag @user.avatar, alt: 'avatar' %>
      <%else%>
        <p class="text-primary text-center my-auto">No avatar</p>
      <%end%>
    </div>

</div>

<% unless @events == [] %>
  <h2 class="h2 mt-3 mb-5 font-weight-normal text-center"><u>The event(s) you manage :</u></h2>
<% end %>

<div class="mb-5 container">

  <div class="row">
    <% @events.all.reverse.each do |event| %>
    <div class="mb-3 col-lg-6">
      <div class="mb-3 card" style="width: 100%;">
        <div class="bg-primary text-light card-header">
          <h3 class="h3"><b><%= event.title %></b></h3>
        </div>
        <div class="card-body">
          <h5 class="h5 card-subtitle mb-2 text-muted"><b>Location : <%= event.location %> | Price : <%= event.price %>â‚¬</b></h5>
          <p class="card-text"><%= event.description.first(250) %>...</p>
          <%= link_to "View details", event_path(event.id), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>

</div>