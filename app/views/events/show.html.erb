<h1 class="h1 mt-5 font-weight-normal text-center">Event page <small class="text-muted">(id:<%= @event.id %>)</small></h1>

<% if current_user == @event.admin %>
  <div class="container text-center mb-3">
    <%= link_to "Edit event", edit_event_path, :class => "btn btn-primary btn-sm text-center" %>
  </div>
<% end %>

<div class="container">
  <div class="card">
    <div class="card-body">
      <h3 class="card-title"><%= @event.title %></h3>
      <h6 class="card-subtitle mb-2 text-muted">Location : <%= @event.location %></h6>
      <p class="card-text">
        <%= @event.description %></br>
        <small class="text-muted">
          Start : <%= @event.start_date %></br>
          Duration : <%= @event.duration %></br>
          Price : <%= @event.price %>â‚¬</br>
          Attendances : <%= @event.attendances.count %></br>
          Admin contact : <%= @event.admin.email %>
        </small>
      </p>
      <% if user_signed_in? %>
        <%= link_to "Register", new_attendance_path, class: "btn btn-dark text-light" %>
      <% end %>
    </div>
  </div>
</div>

