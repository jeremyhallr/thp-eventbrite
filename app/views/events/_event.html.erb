<div class="container">

  <div>
    <h2 class="h2 mt-5">Event <small class="text-muted">(id:<%= @event.id %>)</small></h2>
  </div>

  <div class="row">

    <div class="col-md-8">
      <%if @event.event_picture.attached?%>
        <%= image_tag @event.event_picture, alt: 'event picture' %>
      <%else%>
      <div class="my-auto">
        <p class="text-primary text-center my-auto">No picture attached</p>
      </div>
      <%end%>
    </div>


    <div class="col-md-4">
      <h3 class="h3"><b><%= @event.title %></b></h3>
      <p class="text-muted">
        Price : 5â‚¬</br>
        by <b><%= @admin.first_name %> <%= @admin.last_name %></b>
      </p>
      <h6><b>Attendances</b></h6>
      <p class="text-muted">
        <%= @event.attendances.count %>
      </p>
      <% if current_user == @event.admin %>
        <%= link_to "Edit event", attendances_path(id: @event.id), :class => "btn btn-primary btn-sm text-center" %>
      <% end %>
    </div>
  </div>

</div>

<div class="mt-3 container">

  <div class="row">
    <div class="col-md-8">
      <h3><b>About</b></h3>
      <p class="text-justify"><%= @event.description %></p>
    </div>
    <div class="col-md-4">
      <h5><b>Date & Time</b></h5>
      <p class="text-muted">
        <%= @event.start_date %></br>
        <%= @event.duration %> min
      </p>
      <h5><b>Location</b></h5>
      <p class="text-muted">
        <%= @event.location %></br>
      </p>
      <% if user_signed_in? %>
        <%= link_to "Join", new_attendance_path(id: @event.id), class: "btn-lg btn-primary" %>
      <% end %>
    </div>
  </div>

</div>
