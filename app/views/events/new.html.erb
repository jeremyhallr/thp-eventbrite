<h1 class="h1 mt-5 mb-3 font-weight-normal text-center">New event</h1>

<div class="container">
  <%= form_tag events_path, method: "post" do %>
    <div class="form-row">
       <div class="form-group col-md-6">
        <%= label_tag 'Title' %>
        <%= text_field_tag 'title', "Title", class: 'form-control' %>
        <br/><br/>
      </div>

       <div class="form-group col-md-4">
        <%= label_tag 'Location' %>
        <%= text_field_tag 'location', "Location", class: 'form-control' %>
        <br/><br/>
      </div>

       <div class="form-group col-md-2">
        <%= label_tag 'Price (â‚¬)' %>
        <%= text_field_tag 'price', "0", class: 'form-control' %>
        <br/><br/>
      </div>
    </div>

     <div class="form-group">
      <%= label_tag 'Description' %>
      <%= text_area_tag 'description', "Description", class: 'form-control' %>
        <br/><br/>
    </div>

    <div class="form-row">
       <div class="form-group col-md-6">
        <%= label_tag 'Start Date' %>
        <%= date_field_tag 'start_date', nil, class: 'form-control' %>
        <br/><br/>
      </div>

       <div class="form-group col-md-6">
        <%= label_tag 'Duration (minutes)' %>
        <%= text_field_tag 'duration', "60", class: 'form-control' %>
        <br/><br/>
      </div>
    </div>

  <%= submit_tag "Submit event", class: "btn btn-primary" %>

  <% end %>
</div>