<h1 class="h1 mt-5 font-weight-normal text-center">Event administration<small class="text-muted"> (id:<%= @event.id %>)</small></h1>

<% if current_user == @event.admin %>
  <div class="container text-center mb-3">
    <%= link_to "Edit event", edit_event_path(id: @event.id), :class => "btn btn-primary btn-sm text-center" %>
  </div>
<% end %>

<div class="container">
  <div class="card">
    <div class="card-body">
      <h3 class="card-title"><%= @event.title %></h3>
      <h5 class="card-subtitle mb-2 text-muted">Location : <%= @event.location %></h5>
      <p class="card-text">
        <span class="text-muted">Attendances : <%= @event.attendances.count %></span></br>
        <h5>Attendance list</h5>
          <ul>
          <% @attendances.each do |attendance| %>
            <li><%= attendance.user.email %></li>
          <% end %>
          <ul>
      </p>
    </div>
  </div>
</div>

